#include <GL/gl.h>
#include<cmath>
#include <GL/glut.h>

void display(void){

glClear (GL_COLOR_BUFFER_BIT);

glColor3f (0.0, 0.0, 0.0);

glBegin(GL_LINE_LOOP);

GLfloat step = 2 * 3.14 / 5.0;
register int i;
GLfloat angle, r;
glBegin(GL_LINE_LOOP);
for (i = 0; i < 5; ++i) {
r = (i % 2 == 0 ? 5 : 15);
angle = i * step;
glVertex3f(r * cos(angle), r * sin(angle),0.0);
}
glEnd();
//glVertex3f (1.25, 1.0, 0.0);
//
//glVertex3f (1.75, 1.0, 0.0);
//
//glVertex3f (2, 1.5, 0.0);
//
//glVertex3f (1.5, 2, 0.0);
//glVertex3f (1, 1.5, 0.0);

//////////////////////////
//glVertex3f (0.3, 0.75, 0.0);
//
//glVertex3f (0.15, 0.5, 0.0);
//
//glVertex3f (0.3, 0.25, 0.0);
//
//glVertex3f (0.6, 0.25, 0.0);
//glVertex3f (0.75, 0.5, 0.0);
//glVertex3f (0.6, 0.75, 0.0);

//glEnd();

glFlush ();

}

#

void init (void){

glClearColor (1.0, 1.0, 1.0, 1.0);

glMatrixMode(GL_PROJECTION);

glLoadIdentity();

glOrtho(0.0, 20.0, 0.0, 20.0, -20.0, 20.0);}

int main(int argc, char** argv){

glutInit(&argc, argv);// Kh?i t?o Glut và x? lí m?i dòng l?nh d?i s?,
glutInitDisplayMode (GLUT_SINGLE | GLUT_RGB);// s? d?ng mô hình


glutInitWindowSize (250, 250);// kích c? c?a s?

glutInitWindowPosition (100, 100);// ch? ra v? trí màn hình góc trên bên trái

glutCreateWindow ("hello"); // T?o tiêu d? c?a s? “hello”

init ();

glutDisplayFunc(display);

glutMainLoop();

return 0;
}
